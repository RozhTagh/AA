<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ChangeUsername"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Button text="back" onMouseClicked="#back" translateX="10" translateY="10"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <TextField promptText="username" maxWidth="200" fx:id="username"/>
            <Text fx:id="usernameDetail"/>

            <HBox alignment="CENTER" spacing="15">
                <Button text="submit" onMouseClicked="#changeUsername"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
