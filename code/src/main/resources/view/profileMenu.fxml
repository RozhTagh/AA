<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Circle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ProfileMenu"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Button text="back" onMouseClicked="#back" translateX="10" translateY="10"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Circle radius="40" fx:id="avatarPhoto"/>
            <Button text="change username" fx:id="changeUsername" onMouseClicked="#changeUsername"/>
            <Button text="change password" fx:id="changePassword" onMouseClicked="#changePassword"/>
            <Button text="change avatar" fx:id="changeAvatar" onMouseClicked="#changeAvatar"/>
            <Button text="delete account" fx:id="deleteAccount" onMouseClicked="#deleteAccount"/>
            <Button text="logout" fx:id="logout" onMouseClicked="#logout"/>
        </VBox>
    </center>

</BorderPane>
