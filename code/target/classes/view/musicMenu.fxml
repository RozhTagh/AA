<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MusicMenuController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Button text="back" translateX="10" translateY="10"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <fx:define>
                <ToggleGroup fx:id="tg"/>
            </fx:define>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="music1" onMouseClicked="#playMusic1"/>
                <RadioButton text="music 1" fx:id="music1selector" toggleGroup="$tg" onAction="#setMusic1"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="music2" onMouseClicked="#playMusic2"/>
                <RadioButton text="music 2" fx:id="music2selector" toggleGroup="$tg" onAction="#setMusic2"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="music3" onMouseClicked="#playMusic3"/>
                <RadioButton text="music 3" fx:id="music3selector" toggleGroup="$tg" onAction="#setMusic3"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
