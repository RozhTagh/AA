<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ChangePassword"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Button text="back" onMouseClicked="#back" translateX="10" translateY="10"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <PasswordField promptText="new password" maxWidth="200" fx:id="password"/>
            <Text fx:id="passwordDetail"/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="submit" onMouseClicked="#changePassword"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
