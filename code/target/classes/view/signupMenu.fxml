<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SignupMenuController">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="welcome to signup menu!" fx:id="label"/>
            <VBox alignment="CENTER" spacing="7">
                <TextField promptText="username" maxWidth="240" fx:id="username"/>
                <Text fx:id="usernameDetails"/>
            </VBox>
            <VBox alignment="CENTER" spacing="7">
                <PasswordField promptText="password" maxWidth="240" fx:id="password"/>
                <Text fx:id="passwordDetails"/>
            </VBox>
            <Text text="already have an account? click HERE" underline="true" onMouseClicked="#loginMenu"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="submit" onMouseClicked="#submit"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>